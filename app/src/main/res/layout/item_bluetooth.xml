<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="73dp"
    >
    <TextView
        android:layout_alignParentTop="true"
        android:paddingTop="18dp"
        android:layout_marginLeft="16dp"
        android:id="@+id/tv_bluetooth_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unkown Name"
        android:textColor="#ffff00"
        android:textSize="16sp"
        />
    <TextView
        android:layout_below="@id/tv_bluetooth_name"
        android:paddingTop="13dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bluetooth_MAC"
        android:textColor="#ff00ff"
        android:textSize="13sp"
        android:text="MAC"
        />
    <TextView
        android:layout_alignBottom="@id/tv_bluetooth_MAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bluetooth_rssi"
        android:textSize="13sp"
        android:textColor="#ff00ff"
        android:layout_alignParentRight="true"
        android:text="dBm"
        android:layout_marginRight="16dp"
        />

</RelativeLayout>